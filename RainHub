local Rayfield = loadstring(game:HttpGet("(link unavailable)"))()

local window = Rayfield:CreateWindow({
    Name = "Bloxfruit Auto-Level",
    Parent = game.StarterGui.ScreenGui,
    Color = Color3.fromRGB(255, 255, 255),
})

local tab = window:CreateTab("Auto-Level")
local section = tab:CreateSection("Settings")

local toggle = section:CreateToggle({
    Name = "Auto-Level",
   CurrentValue = false,
   Callback = function(value)
        getgenv().autoLevel = value
    end,
})

local farmLocation = section:CreateInput({
    Name = "Farm Location",
    PlaceholderText = "X, Y, Z",
   CurrentValue = "0, 0, 0",
   Callback = function(value)
        getgenv().farmLocation = Vector3.new(tonumber(value:match("([^,]+),([^,]+),([^,]+)"))())
    end,
})

local farmRadius = section:CreateSlider({
    Name = "Farm Radius",
    Range = {0, 100},
   CurrentValue = 10,
   Callback = function(value)
        getgenv().farmRadius = value
    end,
})

local farmInterval = section:CreateSlider({
    Name = "Farm Interval",
    Range = {1, 60},
   CurrentValue = 5,
   Callback = function(value)
        getgenv().farmInterval = value
    end,
})
```
*Auto-Level Script:*
```
getgenv().autoLevel = false
getgenv().farmLocation = Vector3.new(0, 0, 0)
getgenv().farmRadius = 10
getgenv().farmInterval = 5

while true do
    if getgenv().autoLevel then
        local player = game.Players.LocalPlayer
        local NPCs = game.Workspace:GetDescendants()
        
        for _, npc in pairs(NPCs) do
            if npc.Name == "NPC" and npc.Humanoid.Health > 0 and (npc.HumanoidRootPart.Position - getgenv().farmLocation).Magnitude <= getgenv().farmRadius then
                player.Character.HumanoidRootPart.CFrame = npc.HumanoidRootPart.CFrame
                player.Character.Humanoid:TakeDamage(0) -- Trigger attack animation
            end
        end
        
        -- Level up logic
        local experience = player.PlayerStats.Experience.Value
        if experience >= player.PlayerStats.NextLevelExperience.Value then
            player.PlayerStats.Experience.Value = 0
            player.PlayerStats.Level.Value = player.PlayerStats.Level.Value + 1
        end
    end
    
    wait(getgenv().farmInterval)
end
